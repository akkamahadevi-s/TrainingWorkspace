<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   http://www.springframework.org/schema/beans/spring-beans.xsd">
   
   <!-- by default when the bean is created it will be singleton -->
<bean id="defaultHello" class="com.training.basic.DefaultHello">
	<!-- the data can be supplied to the bean either with setters or constructors -->
	<property name="name" value="Arvind" />
	<property name ="city" value="Bengaluru" />
</bean>


</beans>